{
  "name": "markdown-word-sync",
  "version": "0.1.0",
  "description": "Markdown ↔ Word/WPS 双向实时同步的 MCP 服务器与 CLI",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdsync": "./dist/cli/index.js",
    "markdown-sync": "./dist/cli/index.js",
    "mdsync-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev:mcp": "ts-node src/index.ts",
    "dev:cli": "ts-node src/cli/index.ts",
    "start:mcp": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "docx": "^8.5.0",
    "mammoth": "^1.6.0",
    "marked": "^12.0.2",
    "turndown": "^7.1.2",
    "winston": "^3.10.0",
    "yaml": "^2.4.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/turndown": "^5.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "mcp": {
    "servers": {
      "markdown-word-sync": {
        "command": "node",
        "args": [
          "${npm_package_main}"
        ],
        "env": {
          "MCP_TRANSPORT": "stdio"
        }
      }
    }
  }
}
